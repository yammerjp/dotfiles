{
  "title": "hotkeys to switch app",
  "rules":
  [
    {
      "description": "ctrl-1 to Alacritty",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "1",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a Alacritty"
            }
          ]
        }
      ]
    },
