#!/usr/bin/env ruby

require 'yaml'
require 'shellwords'

config = YAML.load_file(ARGV[0])

config.each do |key, value|
  if key === 'alias'
    value.each do |key, value|
      puts "alias #{key}=#{value.shellescape}"
    end
  end
end

def gen_alias(hash)
  hash.each do |key, value|
    puts "alias #{key}=#{value.shellescape}"
  end
end
